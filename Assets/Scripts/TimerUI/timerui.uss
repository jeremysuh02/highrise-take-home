.timerui {
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
}

.timer-container {
    width: 100%;
    height: 100%;
    min-width: 30px;
    min-height: 50px;

    max-width: 1000px;
    max-height: 1200px;

    align-self: center;

    overflow: hidden;
}

.timer {
    align-items: center;
    justify-content: center;
    -unity-text-align: middle-center;

    font-size: 50px;
    -unity-font-definition: var(--font-white);
}
